@model TestingMVC.ViewModels.UserFormViewModel
@{
    ViewBag.Title = "New User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Users"))
{

    <div class="form-group">
        @Html.LabelFor(u => u.User.Name)
        @Html.TextBoxFor(u => u.User.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.User.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.User.GenderId)
        @Html.DropDownListFor(u => u.User.GenderId, new SelectList(Model.Gender, "Id", "Name"), "Select Gender", new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.User.GenderId)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.User.Age)
        @Html.TextBoxFor(u => u.User.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.User.Age)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.User.Profession)
        @Html.TextBoxFor(u => u.User.Profession, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.User.Profession)
    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
